innodb_thread_concurrency = <%= node['mysql']['config']['mysqld']['innodb_thread_concurrency'] %>
innodb_flush_log_at_trx_commit = <%= node['mysql']['config']['mysqld']['innodb_flush_log_at_trx_commit'] %>
