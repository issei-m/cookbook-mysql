innodb_buffer_pool_size = <%= node['mysql']['config']['mysqld']['innodb_buffer_pool_size'] %>
innodb_buffer_pool_instances = <%= node['mysql']['config']['mysqld']['innodb_buffer_pool_instances'] %>
innodb_write_io_threads = <%= node['mysql']['config']['mysqld']['innodb_write_io_threads'] %>
