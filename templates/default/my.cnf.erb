[client]
port = <%= node['mysql']['config']['client']['port'] %>
socket = <%= node['mysql']['config']['client']['socket'] %>
default_character_set = <%= node['mysql']['config']['client']['default_character_set'] %>

[mysql]
#safe-updates
prompt = '<%= node['mysql']['config']['mysql']['prompt'] %>'
default_character_set = <%= node['mysql']['config']['mysql']['default_character_set'] %>

[mysqld]
skip-name-resolve
skip-external-locking

server_id = <%= node['mysql']['config']['mysqld']['server_id'] %>

default_storage_engine = InnoDB

datadir = <%= node['mysql']['config']['mysqld']['datadir'] %>
port = <%= node['mysql']['config']['mysqld']['port'] %>
socket = <%= node['mysql']['config']['mysqld']['socket'] %>

max_connections = <%= node['mysql']['config']['mysqld']['max_connections'] %>
max_connect_errors = <%= node['mysql']['config']['mysqld']['max_connect_errors'] %>
max_allowed_packet = <%= node['mysql']['config']['mysqld']['max_allowed_packet'] %>

sort_buffer_size = <%= node['mysql']['config']['mysqld']['sort_buffer_size'] %>
read_buffer_size = <%= node['mysql']['config']['mysqld']['read_buffer_size'] %>

table_open_cache = <%= node['mysql']['config']['mysqld']['table_open_cache'] %>
thread_cache_size = <%= node['mysql']['config']['mysqld']['thread_cache_size'] %>
query_cache_size = <%= node['mysql']['config']['mysqld']['query_cache_size'] %>
query_cache_type = <%= node['mysql']['config']['mysqld']['query_cache_type'] %>
tmp_table_size = <%= node['mysql']['config']['mysqld']['tmp_table_size'] %>
max_heap_table_size = <%= node['mysql']['config']['mysqld']['max_heap_table_size'] %>

character_set_server = <%= node['mysql']['config']['mysqld']['character_set_server'] %>
collation_server = <%= node['mysql']['config']['mysqld']['collation_server'] %>

sql_mode = "<%= node['mysql']['config']['mysqld']['sql_mode'] %>"
explicit-defaults-for-timestamp

log_bin = <%= node['mysql']['config']['mysqld']['log_bin'] %>
binlog_format = <%= node['mysql']['config']['mysqld']['binlog_format'] %>
binlog_checksum = <%= node['mysql']['config']['mysqld']['binlog_checksum'] %> 
master_info_repository = <%= node['mysql']['config']['mysqld']['master_info_repository'] %>
log-slave-updates
relay_log_info_repository = <%= node['mysql']['config']['mysqld']['relay_log_info_repository'] %> 
relay_log = <%= node['mysql']['config']['mysqld']['relay_log'] %>
replicate_ignore_db = <%= node['mysql']['config']['mysqld']['replicate_ignore_db'] %>
expire_logs_days = <%= node['mysql']['config']['mysqld']['expire_logs_days'] %>

slow_query_log = 1
long_query_time = <%= node['mysql']['config']['mysqld']['long_query_time'] %>
log_slow_slave_statements

innodb-strict-mode
innodb_data_home_dir = <%= node['mysql']['config']['mysqld']['innodb_data_home_dir'] %>
innodb-file-per-table
innodb_data_file_path = <%= node['mysql']['config']['mysqld']['innodb_data_file_path'] %>
